{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@feature/*": ["src/feature/*"],
      "@vendor.model/*": ["src/feature/vendor/model/*"],
      "@vendor.service/*": ["src/feature/vendor/service/*"],
      "@vendor.type/*": ["src/feature/vendor/type/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
